{
  "name": "idea-garden-desktop",
  "version": "1.0.0",
  "description": "Idea Garden Desktop & Tray App - Capture and cultivate ideas seamlessly",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "ideas",
    "productivity",
    "tray-app"
  ],
  "author": "Riley Lemm",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.riley.idea-garden",
    "productName": "Idea Garden",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png"
    },
    "win": {
      "icon": "assets/icon.png"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
